{{ define "write_query_description" }}
<p>Creates an entry, then queries the source chain and performs a simple operation on the entries, then repeats.</p>
{{ end }}

{{ template "scenario_summary" (dict
    "title" "Write/Query"
    "description" (tmpl.Exec "write_query_description")
    "data" .run_summary
) }}

<div class="scenario-metrics">
    {{ with .scenario_metrics }}
        {{ template "scenario_metric" (dict
            "name" "Write timing"
            "description" "The time it takes to complete the zome function call that writes the entry."
            "content" (tmpl.Exec "timing_and_trend" .write_timing)
        ) }}

        {{ template "scenario_metric" (dict
            "name" "Write rate"
            "description" "The number of writes completed per second."
            "content" (tmpl.Exec "rate_and_trend" .write_rate)
        ) }}

        {{ template "scenario_metric" (dict
            "name" "Error count"
            "description" "The number of errors accumulated during the run."
            "content" (tmpl.Exec "scalar" (dict "value" .errors))
        ) }}
    {{ end }}
</div>

<!doctype html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>{{ template "scenarios_title" . }} | Wind Tunnel Report</title>
        <meta name="description" content="{{ template "scenarios_description" . }}"/>
        <style>
            :root {
                --background: white;
                --subtle: rgba(0, 0, 0, 0.5);
                --more-subtle: rgba(0, 0, 0, 0.35);
                --smoke: rgba(0, 0, 0, 0.2);
                --good: rgb(0, 173, 12);
                --bad: rgb(195, 25, 25);
                --highlight: rgb(52, 152, 219);
                --highlight-subtle: rgba(52, 152, 219, 0.5);
                --grid: 0.5fr 1fr;
                --grid-gap: 2rem;
                --numeric-size: 14rem;
            }

            body {
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
                background: #f5f5f5;
                margin: 0;
                padding: 20px;
            }

            main {
                max-width: 1200px;
                margin: 0 auto;
            }

            .scenario {
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                padding: 30px;
                margin: 2em 0;
            }

            .scenario code {
                font-size: 1.2em;
            }

            {{ template "css" }}
        </style>

        <script src="https://cdn.jsdelivr.net/npm/d3@7"></script>

        <script>
            {{ template "js" }}
        </script>
    </head>

    <body><main>
        {{ template "scenarios_loop" . }}
    </main></body>
</html>
